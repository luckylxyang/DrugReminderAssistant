/* pages/addMedicine/addMedicine.wxss */
@import "../../app.wxss";
.container {
  padding: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background-color: #f5f5f5;
  min-height: 100vh;
  position: relative;
  padding-bottom: 120rpx;
}


.title {
  font-size: 36rpx;
  font-weight: 500;
}

.save-btn {
  font-size: 32rpx;
}

/* 内容区域 */
.section {
  background-color: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;                  /* 使用 Flexbox 布局 */
  justify-content: space-between; /* A 和 B 分别位于容器的两端 */
  align-items: center;  
  margin-bottom: 10px;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 32rpx;
  color: #333;
}

.section-scan{
    width: 80rpx;
    height: 80rpx;
}

.input-group {
  margin-bottom: 30rpx;
  position: relative;
}

.input-field {
  width: calc(100%);
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 32rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.textarea-field {
  width: calc(100%);
  height: 160rpx;
  background-color: #f8f8f8;
  border-radius: 32rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  overflow-y: auto;
}

.voice-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.voice-icon image {
  width: 32rpx;
  height: 32rpx;
}

.picker-field {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.arrow-icon {
  font-size: 24rpx;
  color: #999;
}

/* 频率选择器 */
.frequency-selector {
  display: flex;
  margin-bottom: 30rpx;
}

.frequency-option {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  background-color: #f5f5f5;
  margin: 0 10rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #666;
}

.frequency-option:first-child {
  margin-left: 0;
}

.frequency-option:last-child {
  margin-right: 0;
}

.frequency-option.active {
  background-color: #2196F3;
  color: white;
}

/* 时间选择器 */
.time-picker {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.time-display {
  flex: 1;
  height: 120rpx;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.clock-icon image {
  width: 40rpx;
  height: 40rpx;
}

.delete-time {
  margin-left: 20rpx;
  padding: 20rpx 20rpx;
  background-color: #f5f5f5;
  margin: 0 10rpx;
  width: 80rpx;
  border-radius: 32rpx;
  color: #666;
}

.delete-time image {
  width: 40rpx;
  height: 40rpx;
}

.add-time-btn {
  text-align: center;
  color: #2196F3;
  font-size: 28rpx;
  padding: 20rpx 0;
}

/* 服药时间选项 */
.meal-options {
  display: flex;
  justify-content: space-between;
}

.meal-option {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  background-color: #f5f5f5;
  margin: 0 10rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #666;
}

.meal-option:first-child {
  margin-left: 0;
}

.meal-option:last-child {
  margin-right: 0;
}

.meal-option.active {
  background-color: #2196F3;
  color: white;
}

/* 提醒方式 */
.reminder-options {
  margin-bottom: 30rpx;
}

.reminder-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.reminder-option:last-child {
  border-bottom: none;
}

.emergency-contact {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  color: #333;
  font-size: 28rpx;
}

.arrow-right {
  color: #999;
}

/* 底部确认按钮 */
.confirm-btn {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  height: 90rpx;
  background-color: #2196F3;
  color: white;
  text-align: center;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  box-shadow: 0 4rpx 10rpx rgba(33, 150, 243, 0.3);
}