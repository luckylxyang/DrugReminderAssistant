/* pages/home/home.wxss */

.container {
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-bottom: 32rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background-color: #f5f5f5;
  min-height: 100vh;
  position: relative;
}

/* 顶部标题栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  background-color: #2196F3;
  color: white;
  position: relative;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
}

.notification-icon image {
  width: 48rpx;
  height: 48rpx;
}

/* 日期显示 */
.date-container {
  padding: 30rpx 40rpx;
  text-align: center;
}

.date {
  font-size: 36rpx;
  font-weight: 500;
}

.weekday {
  font-size: 32rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 重要药物提醒 */
.important-reminder {
  display: flex;
  align-items: center;
  background-color: #FFEBEE;
  padding: 20rpx 40rpx;
  margin: 20rpx 0;
}

.warning-icon {
  margin-right: 20rpx;
  font-size: 32rpx;
}

.warning-text {
  color: #F44336;
  font-size: 28rpx;
}

/* 待服用药物列表 */
.section-title {
  font-size: 32rpx;
  font-weight: 500;
  padding: 20rpx, 0rpx;
}

.medicine-list {
  padding: 0 30rpx;
}

.medicine-card {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.medicine-info {
  flex: 1;
}

.medicine-tag {
  display: inline-block;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #E0E0E0;
  color: #757575;
  margin-bottom: 16rpx;
}

.medicine-tag.urgent {
  background-color: #FFEBEE;
  color: #F44336;
}

.medicine-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.medicine-dosage {
  font-size: 28rpx;
  color: #757575;
}

.medicine-time {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
}

.time-remaining {
  font-size: 28rpx;
  color: #F44336;
  margin-bottom: 20rpx;
}

.take-button {
  background-color: #2196F3;
  color: white;
  font-size: 28rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
}

/* 时间段选择器 */
.time-selector {
  display: flex;
  background-color: white;
  margin: 30rpx 30rpx 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.time-slot {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #757575;
  background-color: #f5f5f5;
  border-radius: var(--radius-xl);
  margin: 8rpx;
}

.time-slot.active {
  background-color: #2196F3;
  color: white;
  font-weight: 500;
}

/* 药物时间表 */
.schedule-list {
  padding: 0 30rpx;
}

.schedule-item {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.active-schedule {
  border-left: 8rpx solid #F44336;
}

.schedule-time {
  font-size: 32rpx;
  font-weight: 500;
  margin-right: 30rpx;
  color: #333;
}

.schedule-details {
  flex: 1;
}

.schedule-medicine-name {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.schedule-medicine-dosage {
  font-size: 26rpx;
  color: #757575;
  margin-bottom: 6rpx;
}

.schedule-frequency {
  font-size: 26rpx;
  color: #9E9E9E;
}

/* 底部导航栏 */
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background-color: white;
  display: flex;
  border-top: 1rpx solid #E0E0E0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #757575;
}

.tab-item.active {
  color: #2196F3;
}

.tab-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 6rpx;
}

/* 悬浮添加按钮 */
.add-button {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 101;
}

.add-button image {
  width: 100rpx;
  height: 100rpx;
  z-index: 101;
}