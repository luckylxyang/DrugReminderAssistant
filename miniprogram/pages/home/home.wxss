.container {
  padding: 32rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background-color: #f5f5f5;
  min-height: 100vh;
  position: relative;
}

/* 未登录状态样式 */
.not-logged-in {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  padding: 60rpx 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.default-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.default-avatar image {
  width: 100%;
  height: 100%;
}

.welcome-text {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.login-btn {
  background-color: #2196F3;
  color: white;
  font-size: 32rpx;
  padding: 16rpx 80rpx;
  border-radius: 40rpx;
  margin: 30rpx 0;
}

.login-tip {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  width: 100%;
  margin-top: 20rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
}

.feature-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 10rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 已登录状态样式 */
.important-reminder {
  display: flex;
  align-items: center;
  background-color: #FFEBEE;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 12rpx;
}

.warning-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}

.warning-text {
  color: #F44336;
  font-size: 28rpx;
  flex: 1;
}

.date-container {
  background-color: #fff;
  padding: 32rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.date {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

.weekday {
  font-size: 28rpx;
  color: #666;
  margin-top: 8rpx;
}

.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.medicine-list {
  padding: 0 8rpx;
}

.medicine-card {
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.medicine-info {
  flex: 1;
}

.medicine-tag {
  display: inline-block;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #E0E0E0;
  color: #757575;
  margin-bottom: 12rpx;
}

.medicine-tag.urgent {
  background-color: #FFEBEE;
  color: #F44336;
}

.medicine-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.medicine-dosage {
  font-size: 28rpx;
  color: #666;
}

.medicine-time {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.time-remaining {
  font-size: 26rpx;
  color: #F44336;
  margin-bottom: 16rpx;
}

.take-button {
  background-color: #2196F3;
  color: white;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
}

.time-selector {
  display: flex;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 24rpx;
}

.time-slot {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 8rpx;
  margin: 0 4rpx;
  transition: all 0.3s;
}

.time-slot.active {
  background-color: #2196F3;
  color: white;
}

.schedule-list {
  padding: 0 8rpx;
}

.schedule-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.schedule-time {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-right: 24rpx;
}

.schedule-details {
  flex: 1;
}

.schedule-medicine-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.schedule-medicine-dosage,
.schedule-frequency {
  font-size: 24rpx;
  color: #666;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

.add-button {
  position: fixed;
  right: 48rpx;
  bottom: 48rpx;
  width: 96rpx;
  height: 96rpx;
  background-color: #2196F3;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(33, 150, 243, 0.3);
}

.add-button image {
  width: 48rpx;
  height: 48rpx;
}