.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.status-tabs {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
  position: relative;
}

.tab.active {
  color: #007AFF;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #007AFF;
  border-radius: 2rpx;
}

.search-box {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.search-box input {
  background-color: #f5f5f5;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.medicine-list {
  height: calc(100vh - 240rpx);
}

.medicine-item {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.medicine-info {
  flex: 1;
}

.medicine-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.medicine-details {
  font-size: 26rpx;
  color: #666;
}

.medicine-details text {
  margin-right: 20rpx;
}

.medicine-status {
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.medicine-status.ongoing {
  background-color: #e8f5e9;
  color: #4caf50;
}

.medicine-status.stopped {
  background-color: #ffebee;
  color: #f44336;
}

.medicine-status.expired {
  background-color: #fafafa;
  color: #9e9e9e;
}

.loading, .no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 26rpx;
}