/* pages/profile/profile.wxss */

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部标题栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
}

.settings-icon image {
  width: 40rpx;
  height: 40rpx;
}

/* 未登录状态样式 */
.not-logged-in {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  padding: 60rpx 30rpx;
  margin-bottom: 20rpx;
}

.default-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.default-avatar image {
  width: 100%;
  height: 100%;
}

.login-btn {
  background-color: #2196F3;
  color: white;
  font-size: 32rpx;
  padding: 16rpx 80rpx;
  border-radius: 40rpx;
  margin-bottom: 20rpx;
}

.login-tip {
  font-size: 28rpx;
  color: #999;
}

/* 用户信息卡片 */
.user-info-card {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 30rpx;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.user-phone {
  font-size: 28rpx;
  color: #666;
}

/* 区域标题 */
.section-title {
  font-size: 30rpx;
  color: #333;
  padding: 30rpx 30rpx 20rpx;
  font-weight: 500;
}

/* 设置列表 */
.settings-list {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.settings-item:last-child {
  border-bottom: none;
}

.item-right {
  color: #999;
  display: flex;
  align-items: center;
}

/* 功能项 */
.feature-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.arrow-right {
  color: #999;
  margin-left: 10rpx;
}

.btn-upgrade {
  background-color: #2196F3;
  color: white;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin-right: 10rpx;
}

.version-info {
  font-size: 26rpx;
  color: #999;
}

/* 退出登录按钮 */
.logout-btn {
  margin: 60rpx 30rpx;
  background-color: #fff;
  color: #F44336;
  text-align: center;
  padding: 30rpx 0;
  border-radius: 8rpx;
  font-size: 32rpx;
}

/* 底部导航栏 */
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}

.tab-item.active {
  color: #2196F3;
}

.tab-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 6rpx;
}